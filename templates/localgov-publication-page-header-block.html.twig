{% if not localgov_base_remove_css %}
  {{ attach_library('localgov_base/page-title-block') }}
{% endif %}

{% set classes = ['lgd-page-title-block'] %}

<div{{ attributes.addClass(classes) }}>

  <h1 class="lgd-page-title-block__title">
   {% if node_title %}
    <span role="text" class="lgd-page-title-block__publication-title">{{ title }}</span>
    <span>
      <span class="visually-hidden"> - </span>
      {{ node_title }}
    </span>
     
    {% else %}
      <span role="text">{{ title }}</span>
    {% endif %}
     
  </h1>

  {% if published_date %}
  <div class="lgd-page-title-block__published"><span>{{ 'Published: '|t }}</span>{{ published_date }}</div>
{% endif %}

{% if last_updated_date %}
  <div class="lgd-page-title-block__updated"><span>{{ 'Last updated: '|t }}</span>{{ last_updated_date }}</div>
{% endif %}

</div>
